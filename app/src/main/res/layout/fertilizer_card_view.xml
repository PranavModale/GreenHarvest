<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Type -->
        <TextView
            android:id="@+id/typeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Subtype -->
        <TextView
            android:id="@+id/subtypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtype: "
            android:textSize="16sp" />

        <!-- Price per kg -->
        <TextView
            android:id="@+id/pricePerKgTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price per kg: "
            android:textSize="16sp" />

        <!-- Quantity -->
        <TextView
            android:id="@+id/quantityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity: "
            android:textSize="16sp" />

        <!-- Manufacturing Date -->
        <TextView
            android:id="@+id/manufacturingDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manufacturing Date: "
            android:textSize="16sp" />

        <!-- Expiry Date -->
        <TextView
            android:id="@+id/expiryDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expiry Date: "
            android:textSize="16sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
